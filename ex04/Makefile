################################################################################
###									PROGRAM									 ###
################################################################################

NAME					=		searchAndReplace

################################################################################
###									COMPILE									 ###
################################################################################

CXX						=		g++

################################################################################
###									DIRECTORY								 ###
################################################################################

OBJ_DIR					=		obj

################################################################################
###									FLAGS									 ###
################################################################################

CFLAGS					=		-std=c++98 -Wall -Wextra -Werror

################################################################################
###									FILES									 ###
################################################################################

HEADERS					=		searchAndReplace.hpp

SRC						=		main.cpp searchAndReplace.cpp

OBJ						=		$(SRC:%.cpp=$(OBJ_DIR)/%.o)

################################################################################
###									ARCHIVES								 ###
################################################################################

all: $(NAME)

$(NAME): $(OBJ)
			$(CXX) $(CFLAGS) $(OBJ) -o $(NAME)

$(OBJ_DIR)/%.o: %.cpp $(HEADERS) | $(OBJ_DIR)
			$(CXX) $(CFLAGS) -o $@ -c $<

$(OBJ_DIR):
			mkdir -p $(OBJ_DIR)

re: fclean
			$(MAKE) all

fclean: clean
			rm -f $(NAME)

clean: 
			rm -rf $(OBJ_DIR)

.PHONY: all clean fclean re