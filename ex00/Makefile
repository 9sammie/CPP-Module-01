###############################################################################
###									PROGRAM		###
###############################################################################

NAME					=		Zombie	

###############################################################################
###									COMPILE		###
###############################################################################

CXX						=		g++

###############################################################################
###									DIRECTORY###
###############################################################################

OBJ_DIR					=		obj
SRC_DIR					=		src

###############################################################################
###									FLAGS		###
###############################################################################

CFLAGS					=		-std=c++98 -Wall -Wextra -Werror

###############################################################################
###									FILES		###
###############################################################################

SRC						=		main.cpp Zombie.cpp newZombie.cpp randomChump.cpp

OBJ						=		$(SRC:$(SRC_DIR)/%.c=$(OBJ_DIR)/%.o)

###############################################################################
###									ARCHIVES	###
###############################################################################

all: $(NAME)

$(NAME): $(OBJ)
			$(CXX) $(CFLAGS) $(OBJ) -o $(NAME)

$(OBJ_DIR)/%.o: $(SRC_DIR)/%.c | $(OBJ_DIR)
			$(CXX) $(CFLAGS) -o $@ -c $<

$(OBJ_DIR):
			mkdir -p $(OBJ_DIR)

re: fclean
			$(MAKE) all

fclean: clean
			rm -f $(NAME)

clean: 
			rm -rf $(OBJ_DIR)

.PHONY: all clean fclean re